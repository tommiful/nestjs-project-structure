{
  "extends": ["tslint:latest", "tslint-sonarts", "tslint-microsoft-contrib/latest"],
  "linterOptions": {
    "exclude": ["node_modules/**", "src/entity/**"]
  },
  "rules": {
    "no-any": true,
    "no-consecutive-blank-lines": true,
    "no-irregular-whitespace": true,
    "no-trailing-whitespace": true,
    "cognitive-complexity": [true, 25],
    "cyclomatic-complexity": [true, 25],
    "interface-name": true,
    "max-line-length": [true, 140],
    "member-access": true,
    "member-ordering": [true, { "order": "fields-first" }],
    "ordered-imports": true,
    "prefer-array-literal": true,
    "prefer-const": true,
    "prefer-for-of": true,
    "prefer-method-signature": true,
    "prefer-object-spread": true,
    "prefer-readonly": true,
    "prefer-template": true,
    "prefer-while": true,
    "quotemark": [true, "single"],
    "semicolon": [true, "always"],
    "space-within-parens": true,
    "trailing-comma": [true, { "singleline": "never", "multiline": "never" }],
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-separator", "check-type"],

    "no-angle-bracket-type-assertion": false,
    "no-backbone-get-set-outside-model": false,
    "no-commented-code": false,
    "no-implicit-dependencies": false,
    "no-relative-imports": false,
    "no-submodule-imports": false,
    "export-name": false,
    "non-literal-fs-path": false,
    "object-literal-sort-keys": false
  }
}
